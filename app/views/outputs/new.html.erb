<div class="error_message text-center mt-3">
    <% if @output.errors.any? %>
      <%= @output.errors.count %>件のエラーが発生しました
      <% @output.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
</div>
<div class="container mb-3">
    <div class="d-flex flex-row align-items-center justify-content-center mt-5">
        <h6>インプット「<%= @input.input %>」</h6>
        <h6>使えそうな場面「<%= @input.target %>」</h6>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-sm-12 col-md-2 col-lg-2 mt-1 text-center">
            <%= render 'titles/title', title: @title, user: @user %>
            <% if @user.id == current_user.id %>
                <%= link_to "インプット詳細", input_path(@input.id), class:"btn btn-info btn-sm" %>
            <% end %>
        </div>
        <div class="col">
            <%= form_with model: @output, local:true do |f| %>
            <%= f.hidden_field :input_id, value: @input.id %>
                <div>
                    NEW OUTPUT <%= f.text_field :output, class:"form-control", required:"required" %>
                </div>
                <div class="mt-3">
                    NEW FEEDBACK <%= f.text_area :feedback, class:"form-control", required:"required" %>
                </div>
                <div class="mt-3 text-center">
                    <%= f.submit '登録する', class:"btn btn-success col-sm-12 col-md-6 col-lg-6" %>
                </div>
            <% end %>
        </div>
        <div class="col-sm-12 col-md-5 col-lg-5 mt-5">
            <h4>What's OUTPUT?</h4>
            <ul class="border rounded">
                <li><span class="h5">Write</span>  ノートやブログ・SNSに書く</li>
                <li><span class="h5">Speak</span>  人に教える・話題にしてみる</li>
                <li><span class="h5">Action</span>  実際にやってみる</li>
            </ul>
        </div>
    </div>
</div>
