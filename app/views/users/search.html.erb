<div class="container">
    <div class="row">
        <div class="col">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= link_to user_path(user.id) do %>
                            <%= user.name %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    <div class="mt-5">
        <%= paginate @users %>
    </div>
    </div>
</div>