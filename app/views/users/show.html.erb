<div class="container">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col mt-5 mr-3 text-center">
            <%= attachment_image_tag @user, :profile_image, size: "100x100", format:'jpeg', fallback:"no_image.jpg", class:"rounded-circle" %>
            <h5><%= @user.name %></h5>
            <h5 class="mt-3"><%= @user.introduction %></h5>
            <% if user_signed_in? && @user.id == current_user.id %>
                <span class="mt-3"><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-secondary" %></span>
            <% end %>
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center mt-5 mx-2">
        <% @titles.each do |title| %>
            <div class="main-content col-sm-12 col-md-3 col-lg-2 text-center border rounded shadow mx-auto px-0">
                <div class="image">
                    <%= link_to inputs_path(:title_id => title.id) do %>
                        <%= attachment_image_tag title, :image, format:'jpeg', fallback:"title_no_image.jpg", class:"img-fluid" %>
                    <% end %>
                </div>
                <div class="info border-top">
                    <p class="text-truncate mb-0"><%= title.title_name %></p>
                    <% if title.nices.count == 0 %>
                        <span><i class="far fa-thumbs-up">0</i>
                    <% else %>
                        <i class="fas fa-thumbs-up"><%= title.nices.count %></i>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="mt-5">
        <%= paginate @titles %>
    </div>
</div>
