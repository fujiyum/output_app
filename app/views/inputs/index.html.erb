<div class="container">
    <div class="row">
        <div class="col">
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @title, :image, size:"100x150", format:'jpeg' %>
            <% end %>
            <%= @title.title_name %>
            <%= attachment_image_tag @user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg" %>
            <%= @user.name %>
            <%= link_to "メモ一覧", notes_path(:title_id => @title.id) %>
        </div>
        <div class="col">
            <%= link_to "インプットを追加", new_input_path(:title_id => @title.id) %>
            <% @inputs.each do |input| %>
                <%= input.terget %>
                <%= link_to input_path(input.id) do %>
                    <%= input.input %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>