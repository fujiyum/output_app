<div class="container">
    <div class="row">
        <div class="col">
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @title, :image, size:"100x150", format:'jpeg' %>
            <%= @title.title_name %>
            <%= attachment_image_tag @user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg" %>
            <%= @user.name %>
            <% end %>
        </div>
        <div class="col">
            <%= @input.input %>
            <%= @input.terget %>
            <%= link_to "インプットの編集", edit_input_path(@input.id) %>
            <%= link_to "OUTPUT入力", new_output_path(:input_id => @input.id) %>
            <% @outputs.each do |output| %>
            <%= output.output %>
            <%= output.feedback %>
            <%= link_to "編集", edit_output_path(output.id) %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <% @input.comments.each do |comment| %>
            <p></p>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= form_with(model:[@input, @comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
            <% end %>
        </div>
    </div>
</div>
