<div class="container">
    <div class="row">
        <div class="col">
            <%= attachment_image_tag @title, :image, size:"100x150", format:'jpeg' %>
            <%= @title.title_name %>
            <%= attachment_image_tag @user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg" %>
            <%= @user.name %>
        </div>
        <div class="col">
            <%= @input.input %>
            <%= @input.terget %>
            <%= link_to "インプットの編集", edit_input_path(@input.id) %>
            <%= link_to "OUTPUT入力", new_output_path(:input_id => @input.id) %>
            <% @outputs.each do |output| %>
            <%= output.output %>
            <%= output.feedback %>
            <%= link_to "編集", edit_output_path(output.id) %>
            <% end %>
        </div>
    </div>
</div>
