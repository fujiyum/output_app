<div class="error_message text-center mt-3">
    <% if @input.errors.any? %>
      <%= @input.errors.count %>件のエラーが発生しました
      <% @input.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
</div>
<div class="container">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-sm-12 col-md-2 col-lg-2 mt-5 text-center">
            <%= render 'titles/title', title: @title, user: @user %>
        </div>
        <div class="col-sm-12 col-md-10 col-lg-10 mt-5">
            <%= form_with model:@input, local: true do |f| %>
                <div>インプットの内容:　<%= f.text_field :input, class:"form-control", required:"required" %></div>
                <div class="mt-3">使えそうな場面:　<%= f.text_field :target, class:"form-control", required:"required" %></div>
                <div class="text-center mt-3"><%= f.submit "更新する", class:"btn btn-success col-sm-12 col-md-6 col-lg-6" %></div>
            <% end %>
        </div>
    </div>
</div>
