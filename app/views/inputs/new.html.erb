<div class="container">
    <div class="row">
        <div class="col">
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @title, :image, size: "100x150", format:'jpeg' %>
            <% end %>
            <%= @title.title_name %>
        </div>
        <div class="col">
            <%= form_with model: @input, local:true do |f| %>
            <p>インプット内容: <%= f.text_field :input %></p>
            <p>使えそうな場面: <%= f.text_field :terget %></p>
            <%= f.hidden_field :title_id, value: @title.id %>
            <%= f.submit '登録する' %>
            <% end %>
        </div>
    </div>
</div>
