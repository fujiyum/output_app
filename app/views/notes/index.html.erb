<div class="container">
    <div class="row">
        <div class="col">
            <%= attachment_image_tag @title, :image, size: "100x150", format:'jpg' %>
            <%= @title.title_name %>
        </div>
        <div class="col">
            <% @notes.each do |note| %>
            <%= note.note %>
            <% end %>
        </div>
    </div>
</div>