<!DOCTYPE html>
<html>
  <head>
    <title>OutputApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>.custom-file-label::after { content: "ファイル選択"; }</style>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-white">
       <div class="container">
         <a class="navbar-brand text-dark" href="/">Monophyllaea</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <sapn class="navbar-toggler-icon"></sapn>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
            <li class="navbar-item">
              <%= link_to 'My page', user_path(current_user.id), class:'nav-link text-dark' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'New input', new_title_path, class:'nav-kink text-dark' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'titles', titles_path, class:'nav-link text-dark' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class:'nav-link text-dark' %>
            </li>
           <% else %>
            <li class="navbar-item">
              <%= link_to 'Titles', titles_path, class:'nav-link text-dark' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'Sign up', new_user_registration_path, class:'nav-link text-dark' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'Log in', new_user_session_path, class:'nav-link text-dark' %>
            </li>
           <% end %>
           </ul>
         </div>
         <nav class="navbar navbar-light">
           <div class="container-fluid">
               <form class="d-flex">
                 <%= form_with url: search_users_path, method: :get, local: true do |f| %>
                   <%= f.text_field :name, placeholder: "Username", class:"form-control"%>
                   <%= f.submit :search, class:"btn btn-outline-success" %>
                 <% end %>
                </form>
           </div>
         </nav>
       </div>
     </nav>
    </header>

    <main>
      <%= yield %>
    </mian>

    <footer class="bg-white text-dark">
        <div class="container mt-5">
            <div class="row">
                <div class="mx-auto">
                    <p>CopyRight Infratop.inc</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
    <script>
        bsCustomFileInput.init();
    </script>
  </body>

</html>
