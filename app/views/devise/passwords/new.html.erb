<div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 mt-5">
      <h2 class="text-muted text-center mb-3">Forgot your password?</h2>
      <%= form_with model: @user, url: password_path(resource_name), method: :post do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mt-5">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          <div class="mt-5">
            <%= f.submit "メールを送る", class:"btn btn-secondary fw-bold w-100 bg-gradient" %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
