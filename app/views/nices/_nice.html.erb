<% if user_signed_in? %>
    <% if title.niced_by?(current_user) %>
        <%= link_to title_nices_path(title.id), method: :delete, remote: true do %>
        <i class="fas fa-thumbs-up"></i><%= title.nices.count %> nice
        <% end %>
    <% else %>
        <%= link_to title_nices_path(title.id), method: :post, remote: true do %>
        <i class="far fa-thumbs-up"></i><%= title.nices.count %> nice
        <% end %>
    <% end %>
<% end %>