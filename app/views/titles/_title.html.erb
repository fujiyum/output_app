<p><%= link_to title_path(title.id) do %>
       <%= attachment_image_tag title, :image, size:"100x150", format:'jpeg' %></p>
   <% end %>
<p><%= title.title_name %></p>
<p>
    <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg", class:"rounded-circle" %>
    <% end %>
    <%= user.name %>
</p>