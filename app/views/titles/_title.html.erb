<div>
    <% if user.id == current_user.id %>
        <%= link_to title_path(title.id) do %>
           <%= attachment_image_tag title, :image, size:"100x150", format:'jpeg' %>
        <% end %>
    <% else %>
          <%= attachment_image_tag title, :image, size:"100x150", format:'jpeg' %>
    <% end %>
</div>
<div>「<%= title.title_name %>」</div>
<div>
    <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg", class:"rounded-circle" %>
    <% end %><br />
    <%= user.name %>
</div>