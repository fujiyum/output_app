<div class="container">
    <div class="row">
        <div class="col">
            <% @titles.each do |title| %>
            <%= link_to inputs_path(:title_id => title.id) do %>
            <%= attachment_image_tag title, :image, size: "100x150", format:'jpeg' %>
            <% end %>
            <%= title.title_name %>
            <%= link_to user_path(title.user.id) do %>
            <%= attachment_image_tag title.user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg" %>
            <% end %>
            <%= title.user.name %>
            <% end %>
        </div>
    </div>
</div>