<div class="container">
    <div class="row">
        <% @titles.each do |title| %>
            <div class="col">
                <p>
                    <%= link_to inputs_path(:title_id => title.id) do %>
                    <%= attachment_image_tag title, :image, size: "100x150", format:'jpeg' %>
                    <% end %>
                <p><%= title.title_name %></p>
                <p>
                    <%= link_to user_path(title.user.id) do %>
                    <%= attachment_image_tag title.user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg", class: "rounded-circle" %>
                    <% end %>
                    <%= title.user.name %>
                </p>
                <p>â˜…<%= title.nices.count %></p>
            </div>
        <% end %>
    </div>
</div>