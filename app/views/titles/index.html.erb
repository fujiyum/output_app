<div class="container">
    <div class="row  d-flex align-items-center justify-content-center mt-2 mx-2">
        <% @titles.each do |title| %>
            <div class="main-content col-sm-12 col-md-3 col-lg-2 text-center border rounded shadow mx-auto px-0 mr-sm-0 mr-md-5 mt-md-3">
                <div class="image">
                    <%= link_to inputs_path(:title_id => title.id) do %>
                        <%= attachment_image_tag title, :image, format:'jpeg', fallback:"title_no_image.jpg", class:"img-fluid" %>
                    <% end %>
                </div>
                <div class="info border-top">
                    <p class="text-truncate mb-0"><%= title.title_name %></p>
                    <%= link_to user_path(title.user.id) do %>
                        <%= attachment_image_tag title.user, :profile_image, size:"30x30", format:'jpeg', fallback:"no_image.jpg", class: "rounded-circle" %>
                    <% end %>
                    <span class="text-truncate"><%= title.user.name %></span>
                    <% if title.nices.count == 0 %>
                        <span><i class="far fa-thumbs-up">0</i>
                    <% else %>
                        <i class="fas fa-thumbs-up"><%= title.nices.count %></i>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="mt-5">
        <%= paginate @titles %>
    </div>
</div>