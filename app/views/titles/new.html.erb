<div class="error_message text-center mt-3">
    <% if @title.errors.any? %>
      <%= @title.errors.count %>件のエラーが発生しました
      <% @title.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
</div>

<div class="container">
    <div class="row text-center mb-3">
        <div class="col">
            <img id="preview" class="col-8">
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-5 mt-5">
            <%= form_with model: @title, local:true do |f| %>
                <div class="custom-file mb-3">
                    <%= f.attachment_field :image, class:"custom-file-input", id:"customFileLang" %>
                    <%= f.label :title_image, class:"custom-file-label", for:"customFileLang" %>
                </div>
                <div class="mb-3">
                    <%= f.label :title %>
                    <%= f.text_field :title_name, class:"form-control", placeholder:"Input title name", required:"required" %>
                </div>
                <div class="mb-3">
                    <%= f.submit "保存", class:"btn btn-success fw-bold w-100 bg-gradient" %>
                </div>
            <% end %>
        </div>
    </div>
</div>